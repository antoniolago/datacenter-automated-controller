    "version": "0.2.0",
    "configurations": [
        
    
        
        {
            "name": "Python Debugger: Flask",
            "type": "debugpy",
            "request": "launch",
            "module": "flask",
            "env": {
                "FLASK_APP": "api/main.py",
                "FLASK_DEBUG": "1"
            },
            "args": [
                "run",
                // "--no-debugger",
                "--no-reload"
            ],
            "jinja": true,
            "autoStartBrowser": false
        },
        {
            "name": "API PSW",
            "type": "debugpy",
            "request": "launch",
            "program": "C:/Projetos/datacenter-automated-controller/api/main.py",
            "console": "integratedTerminal",
            "justMyCode": false
        }
    ]
}